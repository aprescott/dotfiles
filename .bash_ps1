YELLOW="\[\033[0;33m\]"
YELLOW_BOLD="\[\033[1;33m\]"
RED_BOLD="\[\033[1;31m\]"

reset_style='\[\033[00m\]'
prompt_style=$reset_style'\[\033[0;90m\]'
command_style=$reset_style'\[\033[1;29m\]'

# Prompt variable:
OLD_PS1="$PS1"

# we might not have git completion available, so squealch the missing
# command error.
if ! command -v __git_ps1 > /dev/null; then
    function __git_ps1 {
        echo > /dev/null
    }
fi

PS1="\$(if [ \$? -eq 1 ]; then echo -e '$RED_BOLD\xe2\x9a\xa1 $reset_style'; fi)$prompt_style\w\$(__git_ps1 '$YELLOW_BOLD::%s')$prompt_style\$ $reset_style"
