{
    "telemetry.enableTelemetry": false,
    "editor.cursorBlinking": "phase",
    "editor.cursorStyle": "line-thin",
    "files.autoSave": "onFocusChange",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.settings.openDefaultSettings": true,
    "workbench.settings.useSplitJSON": true,
    "workbench.settings.openDefaultKeybindings": true,
    "files.trimTrailingWhitespace": true,
    "editor.scrollBeyondLastLine": false,
    "workbench.startupEditor": "newUntitledFile",
    "[javascript]": {
        "editor.tabSize": 2,
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "trailing-spaces.highlightCurrentLine": false,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "window.newWindowDimensions": "maximized",
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.scopes": [
        "document",
        "containers"
    ],
    "gitlens.codeLens.enabled": false,
    "gitlens.hovers.avatars": false,
    "gitlens.views.repositories.location": "gitlens",
    "gitlens.views.fileHistory.location": "gitlens",
    "gitlens.views.lineHistory.location": "gitlens",
    "gitlens.views.compare.location": "gitlens",
    "gitlens.views.search.location": "gitlens",
    "gitlens.hovers.enabled": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "search.searchEditor.defaultNumberOfContextLines": 2,
    "search.showLineNumbers": true,
    "search.searchEditor.reusePriorSearchConfiguration": true,
    "editor.rulers": [
        80,
        120
    ],
    // Only needed for default-y color themes.
    // Custom ones tend to set more appropriate values.
    // "workbench.colorCustomizations": {
    //     "statusBar.background" : "#222222",
    //     "statusBar.foreground": "#b1b1b1",
    //     "statusBar.noFolderBackground" : "#222222",
    //     "statusBar.debuggingBackground": "#511f1f"
    // },
    "search.maintainFileSearchCache": true,
    "editor.columnSelection": false,
    "workbench.editor.decorations.badges": true,
    "workbench.editor.decorations.colors": true,
    "catppuccin.italicKeywords": false,
    "catppuccin.italicComments": false,
    "catppuccin.accentColor": "rosewater",
    "catppuccin.workbenchMode": "flat",
    "byesig.opacity": 0.75,
    "byesig.showIcon": false,
    "byesig.fold": false,
    "[ruby]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": false
    },
    "solargraph.hover": false,
    // ruby extension handles formatting
    "solargraph.autoformat": false,
    "solargraph.formatting": false,
    "rubyLsp.formatter": "auto",
    "editor.guides.bracketPairs": true,
    "[scss]": {
        "editor.tabSize": 2
    },
    "editor.minimap.showSlider": "always",
    "solargraph.references": false,
    // for Copilot
    "editor.inlineSuggest.enabled": true,
    // much more pleasant rapid x'ing
    "workbench.editor.tabSizing": "fixed",
    "terminal.integrated.inheritEnv": false,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "editor.stickyScroll.enabled": true,
    "accessibility.dimUnfocused.enabled": true,
    "accessibility.dimUnfocused.opacity": 0.9,
    "workbench.editor.pinnedTabsOnSeparateRow": true,
    "[html]": {
        "editor.tabSize": 2
    },
    "[erb]": {
        "editor.tabSize": 2
    },
    "[css]": {
        "editor.tabSize": 2
    },
    "tailwind-fold.autoFold": false,
    "workbench.colorTheme": "GitHub Dark Default",
    "rubyLsp.enabledFeatures": {
        "inlayHint": false,
    },
    "rubyLsp.featuresConfiguration": {
        "codeLens": {
            "gemfileLinks": false
        }
    },
    // "editor.fontLigatures": "'calt', 'liga', 'dlig', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08'",
    // "editor.fontFamily": "'Monaspace Neon Var', Menlo, Monaco, 'Courier New', monospace",
    // "editor.fontVariations": "'wght' 300",
    "workbench.tree.enableStickyScroll": true,
    "editor.inlineSuggest.fontFamily": "Monaspace Neon Var",
    "security.workspace.trust.banner": "never",
    "github.copilot.editor.enableAutoCompletions": true,
    "workbench.activityBar.location": "top",
    "rubyLsp.featureFlags": {
        "launcher": false
    }
}
